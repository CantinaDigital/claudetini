{
  "name": "claudetini",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "kill-ports": "lsof -ti:1420,9876 | xargs kill -9 2>/dev/null || true",
    "backend": "cd python-sidecar && python3 -m uvicorn sidecar.api.server:app --port 9876 --host 127.0.0.1",
    "dev:all": "npm install && npm run kill-ports && concurrently -k -n backend,frontend -c blue,green \"npm run backend\" \"npm run dev\"",
    "tauri:dev": "npm install && npm run kill-ports && concurrently -k -n backend,tauri -c blue,green \"npm run backend\" \"npm run tauri dev\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4",
    "typescript": "~5.8.3",
    "vite": "^7.0.4"
  }
}
